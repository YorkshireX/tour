<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".planItem">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_plann"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@android:color/holo_orange_light"
            android:text="计划"
            android:layout_gravity="center"
            android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="384dp"
        android:layout_height="450dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_plan_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="景区:"
                android:textSize="25sp"/>

            <EditText
                android:id="@+id/et_plan_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_plan_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间:"
                android:textSize="25sp"/>

            <EditText
                android:id="@+id/et_plan_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_plan_care"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="温馨提示："
            android:textSize="25sp" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp">

            <RadioButton
                android:id="@+id/tv_plan_medi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="药品"
                android:textSize="25sp"/>

            <EditText
                android:id="@+id/et_plan_medi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp">

            <RadioButton
                android:id="@+id/tv_plan_cloth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="衣物"
                android:textSize="25sp"/>

            <EditText
                android:id="@+id/et_plan_cloth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp">

            <RadioButton
                android:id="@+id/tv_plan_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="证件"
                android:textSize="25sp"/>

            <EditText
                android:id="@+id/et_plan_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp">

            <RadioButton
                android:id="@+id/tv_plan_sun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="防晒"
                android:textSize="25sp"/>

            <EditText
                android:id="@+id/et_plan_sun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp">

            <RadioButton
                android:id="@+id/tv_plan_rain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="雨伞"
                android:textSize="25sp"/>

            <EditText
                android:id="@+id/et_plan_rain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp">

            <RadioButton
                android:id="@+id/tv_plan_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="其他"
                android:textSize="25sp"/>

            <EditText
                android:id="@+id/et_plan_other"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>