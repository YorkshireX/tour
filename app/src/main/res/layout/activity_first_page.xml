<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".firstPage">


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="55dp">

        <ImageButton
            android:id="@+id/btn_explore"
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="28dp"
            android:background="@android:color/holo_orange_light"
            android:onClick="openEx"
            android:src="@mipmap/explore" />

        <ImageButton
            android:id="@+id/btn_interest"
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="36dp"
            android:background="@android:color/holo_orange_light"
            android:onClick="openIn"
            android:src="@mipmap/interest" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="386dp"
        android:layout_height="447dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/jingdian"
                android:text="热门景点"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="70dp"
                android:textSize="25sp" />

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">

               <ImageView
                   android:layout_width="150dp"
                   android:layout_height="100dp"
                   android:src="@drawable/place1" />

               <ImageView
                   android:layout_width="150dp"
                   android:layout_height="100dp"
                   android:src="@drawable/place2" />

               <ImageView
                   android:layout_width="150dp"
                   android:layout_height="100dp"
                   android:src="@drawable/place3" />


           </LinearLayout>

            </LinearLayout>


        <TextView
            android:id="@+id/tiezi"
            android:text="最火帖子"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:textSize="25sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:src="@mipmap/tz" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:src="@mipmap/tz" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:src="@mipmap/tz" />


        </LinearLayout>
        <TextView
            android:id="@+id/jijie"
            android:text="季节景区"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:src="@drawable/place3" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:src="@drawable/place1" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:src="@drawable/place2" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="405dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <ImageButton
            android:id="@+id/btn_store"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:background="@android:color/holo_orange_light"
            android:onClick="openStore"
            android:src="@mipmap/store" />

        <ImageButton
            android:id="@+id/btn_myField"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_orange_light"
            android:onClick="openMyFiled"
            android:src="@mipmap/touxiang" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>

